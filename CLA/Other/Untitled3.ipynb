    "    engSent = input(\"Enter a sentence: \")\n",
    "    list = engSent.split(' ')\n",
    "    pigLatin = ''\n",
    "    for index in range(len(list)):\n",
    "        tempList = list[index]\n",
    "        pigLatin += tempList[1:] + tempList[0] + 'ay' + ' '\n",
    "\n",
    "    print(pigLatin)\n",
    "main()"
